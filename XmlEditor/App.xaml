<Application x:Class="XmlEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XmlEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <SolidColorBrush x:Key="EneroBlue" Color="#272b71"/>

        <Style TargetType="Button" x:Key="BasicButtonStyle">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="{StaticResource EneroBlue}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="BasicTextBlockStyle">
            <Setter Property="Margin" Value="4"/>
        </Style>

        <Style TargetType="TextBox" x:Key="BasicTextBoxStyle">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource BasicButtonStyle}"/>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BasicTextBlockStyle}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource BasicTextBoxStyle}"/>

         
    </Application.Resources>
</Application>
